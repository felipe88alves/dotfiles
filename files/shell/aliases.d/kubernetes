function kgeres() {
    kubectl get events --sort-by='.lastTimestamp' --field-selector involvedObject.name="${1}"
}

function kclone() {
    kubectl get $1 $2 -oyaml | yq 'del(.metadata.ownerReferences, .metadata.resourceVersion, .metadata.uid, .metadata.creationTimestamp, .metadata.deletionTimestamp, .metadata.deletionGracePeriodTimestamp, .metadata.finalizers, .metadata.annotations."kubectl.kubernetes.io/last-applied-configuration", .status)'
}

alias kexec="kubectl exec -it"
function kbash() {
    kubectl exec -it $1 -- /bin/bash
}
function ksh() {
    kubectl exec -it $1 -- /bin/sh
}

